<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
    ibatis数据库操作
    1.不需要接口
    2.直接创建，mapper.xml，写sql语句
    3.namespace没有要求，随意一个字符串即可
    4.内部申明sql语句即可
-->
<mapper namespace="ssss">
    <!--存放User表的sql语句即可-->
    <select id="kkk" resultType="com.garyrio.pojo.User">
        select * from user where userid = #{id}
    </select>
</mapper>